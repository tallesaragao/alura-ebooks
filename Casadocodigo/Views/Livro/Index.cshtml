@model IList<Casadocodigo.Models.Livro>

@{
    ViewData["Title"] = "Livros";
}

<section id="produtos">
    <h2 class="cdc-title">Livros</h2>

        <div class="slider">
            @foreach (var livro in Model)
            {
                <div class="card">
                    <a href="@Url.Action("Detalhes", "Livro", new { id = livro.Id })">
                        <img class="card-img-top" src="@Url.Content(livro.Imagem.CaminhoAcesso)" />
                    </a>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title font-weight-bold">R$ @livro.Precificacao.PrecoUnitario</h5>
                        <a href="@Url.Action("Detalhes", "Livro", new { id = livro.Id })" 
                           class="btn btn-block btn-warning font-weight-bold text-white mt-auto">Comprar</a>
                    </div>
                </div>
            }
        </div>
</section>

@section Scripts {
    <script>
        $(".slider").slick({
            arrows: true,
            speed: 300,
            slidesToShow: 5,
            slidesToScroll: 5,
            swipe: false,
            responsive: [
                {
                    breakpoint: 1200,
                    settings: {
                        slidesToShow: 4,
                        slidesToScroll: 4,
                        arrows: true,
                        dots: false,
                        swipe: false
                    }
                },
                {
                    breakpoint: 992,
                    settings: {
                        slidesToShow: 3,
                        slidesToScroll: 1,
                        dots: true,
                        arrows: false,
                        swipe: true,
                        swipeToSlide: true
                    }
                },
                {
                    breakpoint: 768,
                    settings: {
                        slidesToShow: 2,
                        slidesToScroll: 1,
                        dots: true,
                        arrows: false,
                        swipe: true,
                        swipeToSlide: true
                    }
                }
            ]
        });
    </script>
}


