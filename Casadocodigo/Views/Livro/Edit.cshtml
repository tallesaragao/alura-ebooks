@model Casadocodigo.ViewModels.EdicaoLivroVM

@{
    ViewData["Title"] = "Edição de Livro";
}

<section id="cadastro-categoria">
    <h2 class="cdc-title">Edição de Livro</h2>
    @using (Html.BeginForm("Atualizar", "Livro", FormMethod.Post, new { @enctype = "multipart/form-data", @id = "form-livro" }))
    {
        @Html.HiddenFor(l => l.Id)
        <div class="row">
            <div class="col-12 col-md-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(l => l.Titulo, "Título:")
                    @Html.TextBoxFor(l => l.Titulo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(l => l.Titulo, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(l => l.Subtitulo, "Subtítulo:")
                    @Html.TextBoxFor(l => l.Subtitulo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(l => l.Subtitulo, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(l => l.Paginas, "Nº de Páginas:")
                    @Html.TextBoxFor(l => l.Paginas, new { @class = "form-control" })
                    @Html.ValidationMessageFor(l => l.Paginas, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(l => l.Isbn, "ISBN:")
                    @Html.TextBoxFor(l => l.Isbn, new { @class = "form-control" })
                    @Html.ValidationMessageFor(l => l.Isbn, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(l => l.PrecoUnitario, "Preço Unitário (R$):")
                    @Html.TextBoxFor(l => l.PrecoUnitario, new { @class = "form-control" })
                    @Html.ValidationMessageFor(l => l.PrecoUnitario, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(l => l.AutoresIds, "Autores:")
                    @Html.ListBoxFor(l => l.AutoresIds,
                        new MultiSelectList(ViewBag.Autores, "Id", "Nome", "Selecione um ou mais autores"),
                        new { @multiple = "multiple", @class = "form-control" })
                    @Html.ValidationMessageFor(l => l.AutoresIds, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(l => l.CategoriasIds, "Categorias:")
                    @Html.ListBoxFor(l => l.CategoriasIds,
                        new MultiSelectList(ViewBag.Categorias, "Id", "Nome", "Selecione uma ou mais categorias"),
                        new { @multiple = "multiple", @class = "form-control" })
                    @Html.ValidationMessageFor(l => l.CategoriasIds, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(l => l.Descricao, "Descrição:")
                    @Html.TextAreaFor(l => l.Descricao, new { @class = "form-control", @rows = "4" })
                    @Html.ValidationMessageFor(l => l.Descricao, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-warning text-white font-weight-bold">Atualizar</button>
        <a href="@Url.Action("", "Livro")" class="btn btn-outline-secondary">Cancelar</a>
    }
</section>

@section Scripts {
    <script>
        $(function () {
            $(".custom-file .custom-file-input").change(function () {
                var fileName = $(this).val().split("\\").pop();
                $(".custom-file .custom-file-label").html(fileName);
            });
        });
    </script>
}